{% set categoryDescriptionTop = ceresConfig.item.showCategoryDescriptionTop %}

<div class="parallax-img-container">
    <div class="parallax-img-container-inner" {% if category.details[0].imagePath is not empty %} style="background-image: url(/documents/{{ category.details[0].imagePath }}); background-size:cover;background-position:top,center;"{% endif %}>
        <div class="container-max">
            <div class="parallax-text-wrapper">
                <div class="parallax-text-container">
                    <h1 class="h2 pt-4 category-title">{{ category.details[0].name | raw }}</h1>
                </div>
            </div>
        </div>
    </div>
</div>
